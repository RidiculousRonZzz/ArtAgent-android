<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_back_tool"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:text="Tools"
            android:drawableLeft="@drawable/resized_icon_tool"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/btn_paint"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:layout_marginEnd="9dp"
            android:text="Draw"
            android:drawableLeft="@drawable/ic_paint"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:text="Clear"
            android:drawableLeft="@drawable/resize_clear"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:drawablePadding="6dp"
            android:layout_weight="0.8"
            android:text="Edit"
            android:drawableLeft="@drawable/resize_edit_image"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/edit_ID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:textSize="12sp"
            android:text="1"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>