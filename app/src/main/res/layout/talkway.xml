<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000000">

    <RelativeLayout
        android:id="@+id/fl_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="#000000">
        <LinearLayout
            android:id="@+id/top_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_rounded"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.26"
                        android:text="Chat" />
                    <TextView
                        android:id="@+id/btn_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/resize_clear"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tv_userID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="right"
                        android:layout_marginLeft="8dp"
                        android:text="UserID:" />
                    <EditText
                        android:id="@+id/tv_ID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textSize="10sp"
                        android:text="1234567" />
                    <TextView
                        android:id="@+id/text_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="EditID:" />

                    <EditText
                        android:id="@+id/edit_ID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:textSize="10sp"
                        android:text="0"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/if_location"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:drawablePadding="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/resize_location"
                        android:text="Location"
                        android:textSize="10sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/if_content"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:drawablePadding="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/resize_content"
                        android:text="Screen"
                        android:textSize="10sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/if_emotion"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:drawablePadding="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/resize_emotion"
                        android:text="Emotion"
                        android:textSize="10sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/if_weather"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:drawablePadding="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/resize_weather"
                        android:text="Weather"
                        android:textSize="10sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/if_music"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:drawablePadding="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/resize_music"
                        android:text="Music"
                        android:textSize="10sp"
                        android:gravity="center"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/return_chat"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/resize_chat"
                                android:gravity="center"
                                android:text="Chat"/>

                            <TextView
                                android:id="@+id/tv_4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/ic_camera"
                                android:gravity="center"
                                android:text="Camera" />

                            <TextView
                                android:id="@+id/tv_5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/ic_outline_photo_size_select_actual"
                                android:gravity="center"
                                android:text="Gallery" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/ic_emtion"
                                android:gravity="center"
                                android:text="Emotion" />
                            <TextView
                                android:id="@+id/tv_drawing"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/resize_sketchpad"
                                android:gravity="center"
                                android:text="Sketchpad" />

                            <TextView
                                android:id="@+id/tv_6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/uil_music"
                                android:gravity="center"
                                android:text="Music"
                                android:visibility="gone"/>

                        </LinearLayout>
                    </LinearLayout>



                    <FrameLayout
                        android:id="@+id/fl_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@mipmap/ic_launcher" />

                    </FrameLayout>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_con_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_lin"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/paint_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/btn_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="生成图片"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:drawablePadding="1dp"
                    android:drawableLeft="@drawable/ic_paint"
                    android:background="@drawable/shape_white_bg"
                    android:elevation="0dp" />

                <TextView
                    android:id="@+id/btn_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="修改图片"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:drawablePadding="1dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:drawableLeft="@drawable/resize_edit_image"
                    android:background="@drawable/shape_white_bg"/>

                <TextView
                    android:id="@+id/Inferring_themes"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="请根据我现在的情境推荐绘画主题。"
                    android:textSize="11sp"
                    android:background="@drawable/shape_white_bg"
                    android:elevation="0dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fun_lin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:visibility="gone"
                android:background="@color/gray_blue1">

                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:numColumns="5"
                    android:columnWidth="70dp"
                    android:stretchMode="columnWidth"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:id="@+id/view_odi"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_con_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:background="@drawable/ban_rounded"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="40dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Type something here."
                            android:inputType="textMultiLine"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/btn_send"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_send" />

                        <ImageView
                            android:id="@+id/btn_mirco"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_mircro" />

                        <ImageView
                            android:id="@+id/btn_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:src="@drawable/baseline_add_circle" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_dot_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded"
                    android:padding="5dp"
                    android:src="@drawable/ic_left_arraw" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>